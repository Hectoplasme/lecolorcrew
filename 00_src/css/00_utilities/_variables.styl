// Colors

$c-black        = #251a28
$c-grey-dark    = #302533
$c-grey         = #d3f7de
$c-white        = #ffffff

$c-yellow  = #feee00
$c-pink    = #e30180
$c-blue    = #0771b8

// General colors

$c-background   = $c-white
$c-primary      = $c-yellow
$c-secondary    = $c-pink
$c-font         = $c-black
$c-link         = $c-primary

// Typography

$family-sans-serif = BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif
$family-monospace  = monospace
$font-primary      = 'Raleway', $family-sans-serif
$font-icon         = 'ColorCrew';

$size-super-tiny   = 1.2rem
$size-smaller      = 1.4rem
$size-small        = 1.5rem
$size-regular      = 1.6rem
$size-medium       = 2.7rem
$size-large        = 3.6rem
$size-larger       = 6.6rem
$size-super-large  = 7.7rem
$size-super-larger = 11rem

$weight-light    = 400
$weight-regular  = 600
$weight-medium   = 700
$weight-semibold = 800
$weight-bold     = 900

// Grid breakpoints

// The container horizontal gap, which acts as the offset for breakpoints
$gap = 3.2rem
$column-gap = 0.75rem
// 960, 1152, and 1344 have been chosen because they are divisible by both 12 and 16
$tablet  = 768px
$desktop = 1100px
$wide    = 1280px
$fullhd  = 1440px

// Miscellaneous

$easing = ease-out
$speed  = 86ms
$radius = 3px

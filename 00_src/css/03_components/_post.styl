.post
    position relative

    &__metas
        margin-bottom 1rem

        +tablet()
            margin-bottom 2rem

    &__title
        margin-bottom 1rem

        +tablet()
            margin-bottom 3rem

    &__colors
        position absolute
        top 0
        left -3rem

        &__item
            display block
            width 2rem
            height 5rem

        +tablet()
            left -6rem

            &__item
                width 3rem
                height 8rem
